{
  "name": "ez-time-mcp-alt",
  "version": "1.0.5",
  "description": "Time MCP Server, giving LLMs time awareness capabilities.",
  "private": false,
  "type": "module",
  "keywords": [
    "AI",
    "LLM",
    "MCP",
    "ModelContextProtocol",
    "Time MCP Server",
    "LLM Tool",
    "dayjs",
    "Workday",
    "Holiday"
  ],
  "author": "zac.ma",
  "contributors": [
    "godscat"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/godscat/time-mcp.git"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "time-mcp": "dist/index.js"
  },
  "files": [
    "dist/**",
    "chinese-days.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup && node -e \"require('fs').chmodSync('dist/index.js', '755')\"",
    "postinstall": "node scripts/download-holidays.js",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "outDir": "dist",
    "format": [
      "cjs",
      "esm"
    ],
    "splitting": false,
    "dts": true,
    "clean": true,
    "sourcemap": true
  },
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "devDependencies": {
    "@eslint/js": "^8.56.0",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.56.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.3.3",
    "typescript-eslint": "^7.0.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "dayjs": "^1.11.13",
    "node-fetch": "^3.3.2"
  }
}
